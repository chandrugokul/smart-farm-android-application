<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmer">

    <Button
        android:id="@+id/crop_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/updatecrop"
        android:layout_toStartOf="@+id/name"
        android:text="CROP DETAIL" />

    <Button
        android:id="@+id/updatecrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:layout_toEndOf="@+id/name"
        android:text="UPDATE CROP" />

    <TextView
        android:id="@+id/name"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="HOME " />

    <Button
        android:id="@+id/group"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/crop_details"
        android:layout_marginTop="220dp"
        android:text="GROUP" />

    <Button
        android:id="@+id/button10"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/updatecrop"
        android:layout_alignTop="@+id/group"
        android:text="NODIFICATION" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:text="SHARING TIPS" />
</RelativeLayout>