<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grouping"
    android:background="@drawable/crop_details">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="YOUR GROUP"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-133dp"
        android:layout_marginTop="180dp"
        android:layout_toStartOf="@+id/textView13"
        android:background="@drawable/round_text"
        android:gravity="center"
        android:text="CROP NAME"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/crop"
        android:layout_width="149dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView25"
        android:layout_marginEnd="59dp"
        android:background="@drawable/round_text"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="105dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/textView25"
        android:layout_alignTop="@+id/textView30"
        android:background="@drawable/round_text"
        android:gravity="center"
        android:text="YOUR SHARE QUANTITY"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/crop"
        android:layout_marginBottom="130dp"
        android:background="@drawable/round_text"
        android:gravity="center" />

    <Button
        android:id="@+id/button5"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:background="@drawable/rounded"
        android:onClick="groupdetails"
        android:text="VIEW GROUP MEMBERS"
        android:textColor="@color/white" />

</RelativeLayout>