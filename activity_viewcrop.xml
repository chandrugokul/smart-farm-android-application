<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewcrop"
    android:background="@drawable/crop_details">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="118dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/round_text"
        android:gravity="center"
        android:text="CROP NAME"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="121dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/textView31"
        android:layout_centerVertical="true"
        android:background="@drawable/round_text"
        android:gravity="center"
        android:text="QUANTITY"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/kg"
        android:layout_alignTop="@+id/textView31"
        android:background="@drawable/round_text"
        android:gravity="center" />

    <TextView
        android:id="@+id/kg"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView32"
        android:layout_marginEnd="54dp"
        android:background="@drawable/round_text"
        android:gravity="center" />

    <Button
        android:id="@+id/update"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="124dp"
        android:background="@drawable/rounded"
        android:text="UPDATE CROP"
        android:textColor="@color/white" />
</RelativeLayout>